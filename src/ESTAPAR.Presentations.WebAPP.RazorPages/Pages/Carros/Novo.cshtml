@page
@model ESTAPAR.Presentations.WebAPP.RazorPages.Pages.Carros.NovoModel
@{
    ViewData["Title"] = "Novo";
}

<h4>Novo</h4>
<hr />

<form method="post">
    <div class="row">
        <div class="col">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Marca"></label>
                <input class="form-control" asp-for="Input.Marca">
                <span asp-validation-for="Input.Marca" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Modelo"></label>
                <input class="form-control" asp-for="Input.Modelo">
                <span asp-validation-for="Input.Modelo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Placa"></label>
                <input class="form-control" asp-for="Input.Placa">
                <span asp-validation-for="Input.Placa" class="text-danger"></span>
            </div>


            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="btn btn-link" asp-page="./Index">Voltar</a>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="offset-md-8 col-md-4">
                            <button id="save-button" type="submit" class="btn btn-block btn-primary">Salvar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>