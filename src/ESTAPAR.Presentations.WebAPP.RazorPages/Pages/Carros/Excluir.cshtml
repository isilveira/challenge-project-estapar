@page "{id:int}"
@model ESTAPAR.Presentations.WebAPP.RazorPages.Pages.Carros.ExcluirModel
@{
    ViewData["Title"] = "Excluir";
}

<h4>Excluir</h4>
<h6 class="text-muted">Deseja confirmar a exclusão do carro?</h6>
<hr />

<form method="post">
    <div class="row">
        <div class="col">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Input.IdCarro" type="hidden" />
            <div class="form-group">
                <label asp-for="Input.Marca"></label>
                <input class="form-control" asp-for="Input.Marca" disabled>
            </div>

            <div class="form-group">
                <label asp-for="Input.Modelo"></label>
                <input class="form-control" asp-for="Input.Modelo" disabled>
            </div>

            <div class="form-group">
                <label asp-for="Input.Placa"></label>
                <input class="form-control" asp-for="Input.Placa" disabled>
            </div>

            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="btn btn-link" asp-page="./Index">Voltar</a>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="offset-md-8 col-md-4">
                            <button id="save-button" type="submit" class="btn btn-block btn-danger">Excluir</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>