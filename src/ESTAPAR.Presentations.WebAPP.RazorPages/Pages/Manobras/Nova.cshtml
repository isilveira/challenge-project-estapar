@page
@model ESTAPAR.Presentations.WebAPP.RazorPages.Pages.Manobras.NovaModel
@{
    ViewData["Title"] = "Nova manobra";
}

<h4>Nova manobra</h4>
<hr />

<form method="post">
    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ManobristaID"></label>
                <select asp-for="Input.ManobristaID" asp-items="Model.Manobristas" class="form-control"></select>
                <span asp-validation-for="Input.ManobristaID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.CarroID"></label>
                <select asp-for="Input.CarroID" asp-items="Model.Carros" class="form-control"></select>
                <span asp-validation-for="Input.CarroID" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="btn btn-link" asp-page="./Index">Voltar</a>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="offset-md-8 col-md-4">
                            <button id="save-button" type="submit" class="btn btn-block btn-primary">Salvar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>