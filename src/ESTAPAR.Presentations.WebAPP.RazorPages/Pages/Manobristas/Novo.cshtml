@page
@model ESTAPAR.Presentations.WebAPP.RazorPages.Pages.Manobristas.NovoModel
@{
    ViewData["Title"] = "Novo manobrista";
}

<h4>Novo manobrista</h4>
<hr />

<form method="post">
    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Nome"></label>
                <input class="form-control" asp-for="Input.Nome">
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.CPF"></label>
                <input class="form-control" asp-for="Input.CPF">
                <span asp-validation-for="Input.CPF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.DataNascimento"></label>
                <input class="form-control" asp-for="Input.DataNascimento">
                <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="btn btn-link" asp-page="./Index">Voltar</a>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="offset-md-8 col-md-4">
                            <button id="save-button" type="submit" class="btn btn-block btn-primary">Salvar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>